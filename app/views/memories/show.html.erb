<%= turbo_frame_tag 'memories' do %>
  <%= render 'layouts/flash' %>

  <div class="card mt-4">
    <div class="card-header">
      <%= @memory.title.present? ? @memory.title : '--未登録--' %>
    </div>
    <div class="card-body">
      <p class="text-muted">
        <%= @memory.date.present? ? @memory.date.strftime('%Y年%m月%d日') : '--未登録--' %>
      </p>
      <p class="card-text">
        <%= @memory.details.present? ? @memory.details : '--未登録--' %>
      </p>

      <% if @memory.photos.attached? %>
        <div class="row">
          <% @memory.photos.each do |photo| %>
            <div class="col-md-4">
              <%= image_tag photo, class: "img-fluid rounded mb-3" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>写真: --未登録--</p>
      <% end %>

      <div class="mt-3">
        <%= link_to '編 集', edit_memory_path(@memory), class: 'btn btn-primary mr-2' %>
        <%= link_to '戻 る', memories_path, class: 'btn btn-dark close-btn' %>
      </div>
    </div>
  </div>
<% end %>
