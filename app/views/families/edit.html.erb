<div class="container mt-5">
  <h1 class="mb-4"><%= yield(:title) %></h1>
  <%= turbo_frame_tag @family do %>
    <div class="card border-primary card-hover">
      <div class="card-body">
        <h3 class="card-title">Family Name</h3>
        <div style="display: flex; align-items: center;">
          <%= bootstrap_form_with(model: @family) do |form| %>
            <%= form.text_field :name,skip_label: true, class: "form-control" %>
            <%= form.submit "Update", class: "btn btn-primary", style: "font-size: 0.875rem; padding: 0.2rem 0.5rem;" %>
            <%= link_to "Cancel", families_path, class: "btn btn-outline-secondary", style: "font-size: 0.875rem; padding: 0.2rem 0.5rem;" %>  
          <% end %>
        </div>
        <h3 class="card-title mt-4">Members</h3>
        <ul class="list-group list-group-flush">
          <% @family.users.each do |user| %>
            <li class="list-group-item"><%= user.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
