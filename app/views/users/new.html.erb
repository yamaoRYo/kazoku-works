<!-- Sign up form -->
<div class="container">
  <div class="row justify-content-center pt-5">
    <div class="col-lg-6 col-md-8 col-12 pt-1 pt-md-4 pb-4">
      <h1 class="text-center text-xl-start">新規登録</h1>
      <p class="text-center text-xl-start pb-3 mb-3"> <%= link_to "ログインはこちらから", login_path %></p>
      <%= form_with model: @user, local: true, html: {class: "needs-validation"} do |f| %>
        <div class="row">
          <div class="col-12 mb-4">
            <%= f.label :name, class: "form-label fs-base" %>
            <%= f.text_field :name, class: "form-control form-control-lg" %>
          </div>
          <div class="col-12 mb-4">
            <%= f.label :email, class:"form-label fs-base" %>
            <%= f.email_field :email, class:"form-control form-control-lg" %>
          </div>
          <div class="col-12 mb-4">
            <%= f.label :password, class: "form-label fs-base" %>
            <%= f.password_field :password, class: "form-control form-control-lg" %>
          </div>
          <div class="col-12 mb-4">
            <%= f.label :password_confirmation, class: "form-label fs-base" %>
            <%= f.password_field :password_confirmation, class: "form-control form-control-lg" %>
          </div>
        </div>
        <%= f.submit "会員登録", class: "btn btn-primary shadow-primary btn-lg w-100" %>
      <% end %>
    </div>
  </div>
</div>