<%= turbo_frame_tag @user do %>
    <div class="container mt-5">
        <div class="card overflow-hidden">
            <div class="row g-0">
                <div class="col-sm-4 bg-repeat-0 bg-size-cover" style="background-image: url(assets/img/team/01.jpg); min-height: 12rem;"></div>
                <div class="col-sm-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= @user.name %></h5>
                        <div class="row">
                            <div class="col-sm-10">
                                <p class="card-text fs-sm mb-2">
                                    <strong>Relationship</strong><br>
                                    <input type="text" class="form-control" readonly value="<%= @user.relationship %>">
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10">
                                <p class="card-text fs-sm mb-2">
                                    <strong>Birthdate</strong><br>
                                    <input type="text" class="form-control" readonly value="<%= @user.birthdate %>">
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10">
                                <p class="card-text fs-sm mb-2">
                                    <strong>Age</strong><br>
                                    <input type="text" class="form-control" readonly value="<%= @user.age %>">
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10">
                                <p class="card-text fs-sm mb-2">
                                    <strong>Constellation</strong><br>
                                    <input type="text" class="form-control" readonly value="<%= @user.constellation %>">
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10">
                                <p class="card-text fs-sm mb-2">
                                    <strong>Blood_type</strong><br>
                                    <input type="text" class="form-control" readonly value="<%= @user.blood_type %>">
                                </p>
                            </div>
                        </div>
                    </div>
                </div>      
            </div>
        </div>
        <div class="mt-3 text-end">
            <%= link_to 'edit', edit_user_path(@user) , class: "btn btn-primary" %>
        </div>
    </div>
<% end %>