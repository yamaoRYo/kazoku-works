<!-- Sign in form -->
<div class="container">
  <div class="row justify-content-center pt-5">
    <div class="col-lg-6 col-md-8 col-12 pt-1 pt-md-4 pb-4">
      <h1 class="text-center text-xl-start">ログイン</h1>
      <p class="text-center text-xl-start pb-3 mb-3"><%= link_to "会員登録がお済みでない方はこちらをクリック", new_user_path %></p>
      <%= form_with url: login_path, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
        <div class="position-relative mb-4">
          <%= f.label :email, 'メールアドレス', class: "form-label fs-base" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", required: true %>
          <div class="invalid-feedback position-absolute start-0 top-100">有効なメールアドレスを入力してください</div>
        </div>
        <div class="mb-4">
          <%= f.label :password, 'パスワード', class: "form-label fs-base" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", required: true %>
            <span class="password-toggle-indicator"></span>
            <div class="invalid-feedback position-absolute start-0 top-100">このパスワードは無効です</div>
        </div>
        <div class="mb-4">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember" %>
            <%= f.label :remember_me, class: "form-check-label fs-base", for: "remember" %>
          </div>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary shadow-primary btn-lg w-100" %>
      <% end %>
    </div>
  </div>
</div>
