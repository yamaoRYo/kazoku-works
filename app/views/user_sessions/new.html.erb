<% provide(:title, 'Login') %>

<% if @error_message %>
  <div class="alert alert-danger"><%= @error_message %></div>
<% end %>

<!-- Sign in form -->
<div class="container">
  <div class="row justify-content-center pt-5">
    <div class="col-lg-6 col-md-8 col-12 pt-1 pt-md-4 pb-4">
      <h1 class="text-center text-xl-start">ログイン</h1>
      <p class="text-center text-xl-start pb-3 mb-3"><%= link_to "会員登録がお済みでない方はこちらをクリック", new_user_path %></p>
      <%= bootstrap_form_with(url: login_path) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
        <%= f.password_field :password, autocomplete: "current-password", required: true %>
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember" %>
        <%= f.submit "ログイン" %>
      <% end %>
    </div>
  </div>
</div>
