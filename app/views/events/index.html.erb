<%= provide(:title, t('activerecord.models.event')) %>

<%= turbo_frame_tag 'events' do %>
  <div class="mb-4">
    <h1 class="display-4 mr-3">Events</h1>
    <div class="container ml-3">
      <%= link_to '新規イベントを作成する', new_event_path, data: { turbo_action: 'replace' }, class: "small d-block mt-2" %>
    </div>
  </div>

  <% @events.each do |event| %>
    <div class="container ml-3">
      <div class="card compact-card mb-4 shadow ml-3">
        <div class="card-body">
          <h5 class="card-title font-weight-bold"><%= event.title %></h5>
          <p class="card-text text-muted"><%= event.content %></p>
        </div>
        <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
          <%= link_to t('activerecord.action.show'), event, data: { turbo_action: 'replace' }, class: "btn btn-custom btn-sm" %>
          <%= link_to t('activerecord.action.destroy'), event_path(event), data: { turbo_method: :delete, turbo_confirm: "削除しますか？" }, class: 'text-decoration-none small text-danger' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
